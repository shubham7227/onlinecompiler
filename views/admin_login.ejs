<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="css/default.css">
    <link rel="stylesheet" href="css/admin_login.css">
    <script src = "js/login.js"></script>
</head>
<body>
    <% if(failure) { %>
      <div class="alert"><%= message %></div>
    <% } %>
    <form class="login-form" action="/admin_login" method="post">
        <h1>Admin Login</h1>

        <div class="txtb">
          <input name="uname" type="text" placeholder="Username" id="uname" />
        </div>

        <div class="txtb">
          <input name="password" type="password" placeholder="Password" id="password" />
        </div>

        <div class="show-password">
          <input type="checkbox" id="password-checkbox" name="password-checkbox" onclick="showpassword()" value="invisible" />
          <label for="password-checkbox"> Show password</label><br />
        </div>

        <center><button type="login" class = "btn">
          Login
        </button>
        </center>
        <div class="bottom-txt">
          <div class="acc">
            Login as Individual? <a href="/individual_login" class="bttn">Individual Login</a>
          </div>
        </div>
      </form>
      <div class = "backimg">
            <img src = "assets/background.jpg">
      </div>
</body>
</html>