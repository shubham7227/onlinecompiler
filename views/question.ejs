        <li style="float: right"><a href="/logout">Logout</a></li>
        <li style="float: right"><a href="/profile">Profile</a></li>
      </ul>
    </div>

    <div class="container">
      <div id="question">Loading...</div>
      <div class="editor-area">
        <div class="editor-top">
          <span class="solution">User solution</span>
          <div class="language">
            <label for="lang">Language:</label>

            <select name="lang" id="lang" class="lang">
              <option value="clike">C++</option>
              <option value="java">Java</option>
              <option value="python">Python</option>
            </select>
          </div>
        </div>

        <div class="editor"></div>
        <div class="editor-bottom">
          <div class="input">
            <label for="input">Input:</label>
            <textarea name="input" id="input" class="input-field"></textarea>
          </div>
          <div class="output">
            <label for="output">Output:</label>
            <textarea
              name="output"
              id="output"
              class="output-field"
              disabled
            ></textarea>
          </div>
        </div>
        <div class="btn">
          <button onclick="run()" class="run">Run</button>
          <button onclick="submit()" class="submit">Submit</button>
        </div>
        <span id="msg"></span>
        <h1></h1>
      </div>
    </div>
    <!--Code Mirrors-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.64.0/codemirror.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.64.0/codemirror.min.css"
